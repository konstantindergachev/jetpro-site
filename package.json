{
  "name": "jetro",
  "version": "1.0.0",
  "description": "webpack-project-starter",
  "main": "webpack.config.js",
  "author": "Konstantin Dergachev",
  "license": "ISC",
  "scripts": {
    "dev": "better-npm-run build:dev",
    "prod": "better-npm-run build:prod",
    "lint": "esw webpack.config.* src",
    "lint:w": "npm run lint -- --watch",
    "clean": "rimraf ./dist/*"
  },
  "betterScripts": {
    "build:dev": "webpack-dev-server",
    "build:prod": {
      "command": "npm run clean && webpack -p",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "better-npm-run": "0.0.15",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "font-awesome": "^4.7.0",
    "font-awesome-sass-loader": "^2.0.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "^3.4.2",
    "node-sass": "^4.6.1",
    "pug": "^2.0.0-rc.4",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.3.0",
    "purifycss-webpack": "^0.7.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "uglify-js": "^3.1.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^3.1.11"
  }
}
